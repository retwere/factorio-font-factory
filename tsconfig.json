/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["DOM"],

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },

  /* Source Files */
  "include": ["./src/**.ts"],
  "exclude": ["./src/**.test.ts"]
}
